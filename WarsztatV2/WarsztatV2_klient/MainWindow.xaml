<Window x:Class="WarsztatV2_klient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarsztatV2_klient"
        mc:Ignorable="d"
        Title="Warsztat v2.0" Height="650" Width="1200"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Icon="Image/logo.png">

    <Grid Background="#FFFFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="10,0,10,0" Background="#ffeeeeee" Height="120" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label x:Name="headerSectionLabel" Content="Panel napraw warsztatu samochodowego" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="24" Grid.Row="0"/>
            <TextBlock x:Name="subHeaderSectionTextBlock" VerticalAlignment="Top" FontSize="12" TextWrapping="Wrap" Margin="15,5,5,0" Width="auto" Grid.Row="1"><Run Text="W sekcji Panel napraw warsztatu samochodowego znajduje się lista zadań powierzonych do wykonania. Po kliknięciu na dowolną pozycję z listy pojawią się bardziej szczegółowe informacje na temat danego przypadku, tj. numer rejestracyjny, numer VIN, model i marka pojazdu, rok produkcji, typ paliwa oraz przyczynę ostatniej wizyty w warsztacie. Po wybraniu opcji Dodaj części użyte przy naprawie, wyświetli się okienko wyboru z listą dostępnych części."/><Run/></TextBlock>
        </Grid>
        <Grid Grid.Row="1" Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="0,0,10,0">
                <Grid Background="#ffeeeeee">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="180"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label x:Name="informationLabel" Content="Lista oczekujących na naprawę:" VerticalAlignment="Center" Height="34" FontStretch="Normal" HorizontalContentAlignment="Left" FontSize="19" Margin="10,0,0,0"/>
                    <Grid Grid.Row="1">
                        <ListView x:Name="lvDataBinding" HorizontalContentAlignment="Stretch" Background="#f2f2f2" Margin="10,0,10,0">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn DisplayMemberBinding= "{Binding Path=Numer_rejestracyjny}" Header="Numer rejestracyjny" Width="130"/>
                                    <GridViewColumn DisplayMemberBinding= "{Binding Path=PojazdNav.Marka}" Header="Marka" Width="100"/>
                                    <GridViewColumn DisplayMemberBinding= "{Binding Path=PojazdNav.Model}" Header="Model" Width="115"/>
                                </GridView>
                            </ListView.View>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListViewItemPreviewMouseLeftButtonDown"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Button x:Name="refreshViewButton" Margin="10,5,10,5" Content="Odśwież widok" Click="refreshViewButton_Click"/>
                    </Grid>
                    <Grid Grid.Row="3" Margin="0,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label x:Name="informationLabel2" Grid.Row="0" Content="Szczegółowe informacje o pojeździe:" Height="35" Margin="10,0,10,0" FontSize="19"/>
                        <Grid Grid.Row="1" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="10,0,10,0">
                                <TextBlock x:Name="numerRejestracyjny" Margin="0,0,0,10" Text="Numer rejestracyjny: " FontWeight="Bold"/>
                                <TextBlock x:Name="marka" Margin="0,0,0,10" Text="Marka: " FontWeight="Bold"/>
                                <TextBlock x:Name="model" Margin="0,0,0,10" Text="Model: " FontWeight="Bold"/>
                                <TextBlock x:Name="numerVIN" Margin="0,0,0,10" Text="Numer VIN: " FontWeight="Bold"/>
                                <TextBlock x:Name="rokProdukcji" Margin="0,0,0,10" Text="Rok produkcji: " FontWeight="Bold"/>
                                <TextBlock x:Name="typPaliwa" Margin="0,0,0,10" Text="Typ paliwa: " FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="10,0,10,0">
                                <TextBlock x:Name="numerRejestracyjnyIn" Margin="0,0,0,10"/>
                                <TextBlock x:Name="markaIn" Margin="0,0,0,10"/>
                                <TextBlock x:Name="modelIn" Margin="0,0,0,10"/>
                                <TextBlock x:Name="numerVINIn" Margin="0,0,0,10"/>
                                <TextBlock x:Name="rokProdukcjiIn" Margin="0,0,0,10"/>
                                <TextBlock x:Name="typPaliwaIn" Margin="0,0,0,10"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Column="1" Background="#ffeeeeee">

            </Grid>
            <Grid Grid.Column="2" Background="Blue" Margin="10,0,0,0">
            </Grid>
        </Grid>


